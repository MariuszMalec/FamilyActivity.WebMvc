@using FamilyActivity.WebMvc.Models
@using FamilyActivity.WebMvc.Enums
@model FamilyActivity.WebMvc.Models.ModelPictureActivity

<h1>Edit</h1>

<h4>Activity pictures view</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Id" class="control-label"></label>
                    <input asp-for="Id" class="form-control" readonly="readonly" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="ActivityName" class="control-label"></label>
                    <input asp-for="ActivityName" class="form-control" readonly="readonly" />
                    <span asp-validation-for="ActivityName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" class="form-control" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div>
            <img src="@Model.Picture" alt="@Model.Picture"
                 style="object-fit:scale-down;
                            width:100%;
                            height:auto;
                            border: solid 1px #CCC">
        </div>
     </div>
</div>

<div>
    <a class="btn btn-success" asp-action="Index">Back to List</a>
</div>