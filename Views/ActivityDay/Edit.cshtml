                <select asp-for="DayOfWeek" id="dayOfWeekSelect" asp-items="dayOfWeekList" class="form-control">
                    <option selected="DayOfWeek">Please select</option>
                </select>
                <span asp-validation-for="DayOfWeek" class="text-danger"></span>
