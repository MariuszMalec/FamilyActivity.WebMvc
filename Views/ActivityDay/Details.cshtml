@using FamilyActivity.WebMvc.Models
@model FamilyActivity.WebMvc.Models.ModelActivityDays

@{
    ViewData["Title"] = "Details";
}

<div class="row-md-4 col-xs-3 border-primary mb-3">
    <div class="card mb-3" style="max-width: 640px; background-image: url('https://plus.unsplash.com/premium_photo-1677093905933-22469186a34b?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-size: cover;">
        <div class="row g-0">
            <div class="rows-md-12">
                <div class="card-header text-white bg-info">
                    <p class="card-text">
                        <h5 class="card-title">
                            Details
                        </h5>
                    </p>
                </div>
            </div>
            <div class="col-md-6">
                <img src=@Model.ModelPictureActivity.Picture alt=""
                     style="object-fit:scale-down;
                            width:100%;
                            height:auto;
                            border: solid 1px #CCC">
            </div>
            <div class="col-md-8">
                <div class="card-body">

                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CreatedAt)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.StartTime)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.StartTime)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.EndTime)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.EndTime)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ModelPersonFamily.PersonName)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.ModelPersonFamily.PersonName)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.DayOfWeek)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.DayOfWeek)
                        </dd>
                    </dl>

                </div>
            </div>
        </div>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a style="btn btn-success" asp-controller="ActivityDay" asp-action="Index">Back to activity day</a>
</div>