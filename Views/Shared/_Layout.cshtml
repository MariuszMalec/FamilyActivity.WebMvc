<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FamilyActivity.WebMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />    
    <link rel="stylesheet" href="~/FamilyActivity.WebMvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/clockanalog.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/clockdigital.css" asp-append-version="true" />    
    <link rel="stylesheet" href="~/css/stylesButtonMenu.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/clockanalog.js" asp-append-version="true"></script>
    <script src="~/js/clockdigital.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

</head>

<body onload="counter();">
    <header>
        <nav style="background-color:#BFE9EB;" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <partial name="_ClockAnalogy" />
                <div class="bg-dark text-white border-success border border-4 rounded" id="currentTime"></div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FamilyActivity.WebMvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <partial name="_HeadMenu" />
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - FamilyActivity.WebMvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

